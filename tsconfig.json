{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es6", "dom", "dom.iterable", "es2016"],
    "module": "es6",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "watchOptions": {
    "watchDirectory": "useFsEvents",
    "excludeDirectories": ["**/node_modules", "**/dist"]
  }
}